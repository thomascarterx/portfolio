<p id="notice"><%= notice %></p>
<section id="article-list" class="container-fluid">
  <div id="header" class="row">
    <div class="col-lg-12">
      <h1>Articles</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-1">
      
    </div>

    <div class="col-lg-10">
      <% @articles.each do |article| %>
          <%= link_to article do %>
            <%= image_tag article.feature_image_url %>
          <% end %>
          <h1><%= link_to article.title, article %></h1>
          <p>by <%= article.author %> on <%= article.created_at %></p>
          <p>Tags: <%= article.tags %></p>
          <p><%= article.excerpt %>
            <br>
            <%= link_to 'Read more...', article %>
          </p>
      <% end %>
    </div>

    <div class="col-lg-1">
      
    </div>
  </div>
</section>