<%= simple_form_for(@support_ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_id %>
    <%= f.input :problem %>
    <%= f.input :urgency %>
    <%= f.input :closed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
