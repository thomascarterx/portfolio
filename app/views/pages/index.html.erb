<p id="notice"><%= notice %></p>
<section id="home-header" class="container-fluid">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center words">
            <h1>Hi, I'm Thomas</h1>
            <h2>Freelance Web Developer</h2>
            <h3>Specializing in WordPress <br>&amp; Ruby on Rails</h3>
        </div>
        <div class="col-lg-3"></div>
    </div>
</section>


<section id="home-work" class="container-fluid">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>SOME OF MY <strong>BEST WORK</strong></h1>
            <hr class="styled">
            <h3>Sometimes its best to let your work speak for you.
                <br>Here is some of my best work from various categories
            </h3>
        </div>
    </div>

    <div class="row">
      <% @projects.each do |project| %>
          <div class="col-lg-4">
            <%= link_to project do %>
              <%= image_tag project.feature_image_url %>
            <% end %>
            <h3><%= link_to project.title, project %></h3>
            <p><strong>Client:</strong> <%= project.client %></p>
            <p><strong>Tags:</strong> <%= project.tags %></p>
            <p><strong>Description:</strong> <%= project.description %></p>
            <p><strong>Problem:</strong> <%= project.problem %></p>
            <p><strong>Solution:</strong> <%= project.solution %></p>
            <%= link_to 'Read more...', project %>
          </div>
      <% end %>
    </div>

    <div class="row">
        <div class="col-lg-12 text-center">
            <h3><%= link_to 'View More', portfolio_path %></h3>
        </div>
    </div>
</section>

<section class="container-fluid">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center words">
            <h1>Sign up for my Newsletter</h1>
            <form class="form-horizontal">
              <div class="form-group">
                <div class="col-sm-12">
                  <input type="text" class="form-control" id="inputName" placeholder="Name">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <button type="submit" class="btn btn-info">Sign up</button>
                </div>
              </div>
            </form>
        </div>
    </div>
    <div class="col-lg-3"></div>
</section>
